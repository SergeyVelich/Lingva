@{
    ViewData["Title"] = "Edit group";
}
<h2>Edit group</h2>

<form action="/groups/Update" method="post" class="form-horizontal" role="form">
    <input type="hidden" readonly value="@Model.Id" name="Id" />
    <div class="form-group">
        <label for="Title" class="col-md-2 control-label">Title:</label>
        <div class="col-md-4">
            <input type="text" name="Title" class="form-control" value="@Model.Title" />
        </div>
    </div>
    <div class="form-group">
        <label for="Description" class="col-md-2 control-label">Description:</label>
        <div class="col-md-4">
            <input type="text" name="Description" class="form-control" value="@Model.Description" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Picture:</label>
        <div class="col-md-4">
            <input type="text" name="Picture" class="form-control" value="@Model.Picture" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
</form>