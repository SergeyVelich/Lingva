@model Lingva.MVC.Models.Group.Update.PageViewModel

@{
    ViewData["Title"] = "Edit group";
}
<h2>Edit group</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-route-id="@Model.GroupViewModel.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.GroupViewModel.Name)
                </dt>
                <dd>
                    <input type="text" name="Name" class="form-control" value="@Html.DisplayFor(modelItem => Model.GroupViewModel.Name)" />
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.GroupViewModel.Date)
                </dt>
                <dd>
                    <input type="text" name="Date" class="form-control" value="@Html.DisplayFor(modelItem => Model.GroupViewModel.Date)" />
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.GroupViewModel.LanguageId)
                </dt>                
                <dd>
                    @Html.DropDownList("LanguageId", Model.Languages as SelectList, htmlAttributes: new { @class = "form-control" })
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.GroupViewModel.Description)
                </dt>
                <dd>
                    <input type="text" name="Description" class="form-control" value="@Html.DisplayFor(modelItem => Model.GroupViewModel.Description)" />
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.GroupViewModel.Picture)
                </dt>
                <dd>
                    <input type="text" name="Picture" class="form-control" value="@Html.DisplayFor(modelItem => Model.GroupViewModel.Picture)" />
                </dd>
            </dl>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>