@model Lingva.MVC.Models.Group.Create.PageViewModel

@{
    ViewData["Title"] = "Create group";
}

<h2>Create new group</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.GroupViewModel.Name)
                </dt>
                <dd>
                    @Html.TextBox("Name", "", htmlAttributes: new { @class = "form-control" })
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.GroupViewModel.Date)
                </dt>
                <dd>
                    @Html.TextBox("Date", "", htmlAttributes: new { @class = "form-control", @type = "date" })
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.GroupViewModel.LanguageId)
                </dt>
                <dd>
                    @Html.DropDownList("LanguageId", Model.Languages as SelectList, htmlAttributes: new { @class = "form-control" })
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.GroupViewModel.Description)
                </dt>
                <dd>
                    @Html.TextBox("Description", "", htmlAttributes: new { @class = "form-control" })
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.GroupViewModel.Picture)
                </dt>
                <dd>
                    @Html.TextBox("Picture", "", htmlAttributes: new { @class = "form-control" })
                </dd>
            </dl>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>