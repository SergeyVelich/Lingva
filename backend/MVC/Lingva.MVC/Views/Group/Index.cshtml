    <tr>
        <th>
            <a asp-action="Index"
               asp-route-sortProperty="@("Name")"
               asp-route-sortOrder="@("Desc")"
               asp-route-name="@(Model.FilterViewModel.SelectedName)"
               asp-route-language="@(Model.FilterViewModel.SelectedLanguage)">Name</a>
        </th>
        <th>
            <a asp-action="Index" 
               asp-route-sortProperty="@("Date")"
               asp-route-sortOrder="@("Desc")"
               asp-route-name="@(Model.FilterViewModel.SelectedName)"
               asp-route-language="@(Model.FilterViewModel.SelectedLanguage)">Date</a>
        </th>
        <th>
            <a asp-action="Index" 
               asp-route-sortProperty="@("Language")"
               asp-route-sortOrder="@("Desc")"
               asp-route-name="@(Model.FilterViewModel.SelectedName)"
               asp-route-language="@(Model.FilterViewModel.SelectedLanguage)">Language</a>
        </th>
    </tr>
    @foreach (GroupViewModel groupViewModel in Model.Groups)
    {
        <tr>
            <td>@groupViewModel.Name</td>
            <td>@groupViewModel.Date</td>
            <td>@groupViewModel.LanguageId</td>
            <td>@groupViewModel.Description</td>
            <td>@groupViewModel.Picture</td>
            <td>@Html.ActionLink("Get", "Get", new { id = groupViewModel.Id })</td>
            <td>@Html.ActionLink("Update", "Update", new { id = groupViewModel.Id })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = groupViewModel.Id })</td>
        </tr>
    }
</table>

    <page-link page-model="Model.PageViewModel" page-action="Index"
                page-url-name="@(Model.FilterViewModel.SelectedName)"
                page-url-language="@(Model.FilterViewModel.SelectedLanguage)"></page-link>
